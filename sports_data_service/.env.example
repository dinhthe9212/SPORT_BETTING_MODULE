# Sports Data Service Environment Variables

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_NAME=sports_data_db
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=5

# Service Configuration
SERVICE_NAME=sports_data_service
SERVICE_VERSION=1.0.0

# External API Keys
API_SPORTS_KEY=your_api_sports_key
THE_ODDS_API_KEY=your_the_odds_api_key
OPENLIGADB_KEY=your_openligadb_key
THESPORTSDB_KEY=your_thesportsdb_key

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
